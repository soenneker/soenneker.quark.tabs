@page "/"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <img src="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" class="mb-3" />
            <h1>Soenneker.Quark.Tabs Demo</h1>
            <p class="lead">Comprehensive examples showcasing the Tabs component functionality and variations.</p>
        </div>
    </div>

    <!-- Basic Tabs -->
    <div class="row mb-5">
        <div class="col-12">
            <h2>Basic Tabs</h2>
            <p>Standard horizontal tabs with default styling.</p>
            
            <TabsContainer>
                <Tab Target="basic-home" Active="true">Home</Tab>
                <Tab Target="basic-profile">Profile</Tab>
                <Tab Target="basic-contact">Contact</Tab>
            </TabsContainer>
            
            <div class="tab-content p-3 border border-top-0" id="basicTabsContent">
                <div class="tab-pane fade show active" id="basic-home" role="tabpanel">
                    <h4>Welcome Home!</h4>
                    <p>This is the home tab content. Here you can see how the basic tabs work with the Quark Tabs component.</p>
                    <div class="alert alert-info">
                        <strong>Tip:</strong> Click on different tabs to see the content change.
                    </div>
                </div>
                <div class="tab-pane fade" id="basic-profile" role="tabpanel">
                    <h4>User Profile</h4>
                    <p>This is the profile tab content. You can put any content here including forms, images, or other components.</p>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Profile Information</h5>
                            <p class="card-text">Sample profile data would go here.</p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="basic-contact" role="tabpanel">
                    <h4>Contact Information</h4>
                    <p>This is the contact tab content. Perfect for contact forms or contact details.</p>
                    <ul class="list-group">
                        <li class="list-group-item">Email: contact@example.com</li>
                        <li class="list-group-item">Phone: (555) 123-4567</li>
                        <li class="list-group-item">Address: 123 Main St, City, State</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Pills Tabs -->
    <div class="row mb-5">
        <div class="col-12">
            <h2>Pills Tabs</h2>
            <p>Tabs with pill-style appearance for a more modern look.</p>
            
            <TabsContainer Pills="true">
                <Tab Target="pills-dashboard" Active="true">Dashboard</Tab>
                <Tab Target="pills-analytics">Analytics</Tab>
                <Tab Target="pills-settings">Settings</Tab>
                <Tab Target="pills-reports">Reports</Tab>
            </TabsContainer>
            
            <div class="tab-content p-3" id="pillsTabsContent">
                <div class="tab-pane fade show active" id="pills-dashboard" role="tabpanel">
                    <h4>Dashboard Overview</h4>
                    <p>Your main dashboard with key metrics and information.</p>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">1,234</h5>
                                    <p class="card-text">Total Users</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">5,678</h5>
                                    <p class="card-text">Page Views</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">89%</h5>
                                    <p class="card-text">Uptime</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">$12,345</h5>
                                    <p class="card-text">Revenue</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-analytics" role="tabpanel">
                    <h4>Analytics</h4>
                    <p>Detailed analytics and performance metrics.</p>
                    <div class="progress mb-3">
                        <div class="progress-bar" role="progressbar" style="width: 75%">75%</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 60%">60%</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 45%">45%</div>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-settings" role="tabpanel">
                    <h4>Settings</h4>
                    <p>Configure your application settings and preferences.</p>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notifications" checked>
                        <label class="form-check-label" for="notifications">Enable Notifications</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="darkmode">
                        <label class="form-check-label" for="darkmode">Dark Mode</label>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-reports" role="tabpanel">
                    <h4>Reports</h4>
                    <p>Generate and view various reports.</p>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">Monthly Sales Report</a>
                        <a href="#" class="list-group-item list-group-item-action">User Activity Report</a>
                        <a href="#" class="list-group-item list-group-item-action">Performance Report</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vertical Tabs -->
