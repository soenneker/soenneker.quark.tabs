    <!-- Component Properties -->
    <div class="row mb-5">
        <div class="col-12">
            <h2>Component Properties</h2>
            <p>Available properties for customizing the Tabs component.</p>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Type</th>
                            <th>Default</th>
                            <th>Description</th>
                        </tr>
                    </thead>
